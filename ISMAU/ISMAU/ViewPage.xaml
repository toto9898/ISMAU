<Page x:Class="ISMAU.ViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
      xmlns:local="clr-namespace:ISMAU"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewPage"
      Background="White">

    <Grid>
        <telerik:RadRadialGauge Name="radialGauge" 
                    Width="300" 
                    Height="300">
            <telerik:RadialScale Name="scale" 
                    Min="1" 
                    Max="11">
                <telerik:RadialScale.Indicators>
                    <telerik:Needle Name="needle" Value="17" />
                    <telerik:Pinpoint />
                </telerik:RadialScale.Indicators>
            </telerik:RadialScale>
            <telerik:Label HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Margin="0 0 0 30"/>
        </telerik:RadRadialGauge>
    </Grid>
</Page>
